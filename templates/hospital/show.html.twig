{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">{{ hospital.HospitalName }}</h4>
                            <p class="card-description">
                                New User Registration Form
                            </p>
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ hospital.id }}</td>
                                </tr>
                                <tr>
                                    <th>HospitalName</th>
                                    <td>{{ hospital.HospitalName }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ hospital.Address }}</td>
                                </tr>
                                <tr>
                                    <th>Capacity</th>
                                    <td>{{ hospital.Capacity }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('hospital_index') }}" class="btn btn-link">back to list</a>

                            <a href="{{ path('hospital_edit', {'id': hospital.id}) }}" class="btn btn-warning">edit</a>

                            {{ include('hospital/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
