{% extends 'dashboard/index.html.twig' %}

{% block title %}Hospital index{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Users List</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>HospitalName</th>
                                        <th>Address</th>
                                        <th>Capacity</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for hospital in hospitals %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ hospital.HospitalName }}</td>
                                            <td>{{ hospital.Address }}</td>
                                            <td>{{ hospital.Capacity }}</td>
                                            <td>
                                                <a href="{{ path('hospital_show', {'id': hospital.id}) }}" class="btn btn-success">show</a>
                                                <a href="{{ path('hospital_edit', {'id': hospital.id}) }}" class="btn btn-warning">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a href="{{ path('hospital_new') }}" class="btn btn-primary">Create new</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
