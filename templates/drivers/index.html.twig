{% extends 'dashboard/index.html.twig' %}

{% block title %}Drivers index{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Available Drivers List</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Username</th>
                                        <th>Roles</th>
                                        <th>Password</th>
                                        <th>FirstName</th>
                                        <th>LastName</th>
                                        <th>Age</th>
                                        <th>Sex</th>
                                        <th>PhoneNumber</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for driver in drivers %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ driver.username }}</td>
                                            <td>{{ driver.roles ? driver.roles|json_encode : '' }}</td>
                                            <td>{{ driver.password }}</td>
                                            <td>{{ driver.FirstName }}</td>
                                            <td>{{ driver.LastName }}</td>
                                            <td>{{ driver.Age }}</td>
                                            <td>{{ driver.Sex }}</td>
                                            <td>{{ driver.PhoneNumber }}</td>
                                            <td>
                                                <a href="{{ path('drivers_show', {'id': driver.id}) }}" class="btn btn-success">show</a>
                                                <a href="{{ path('drivers_edit', {'id': driver.id}) }}" class="btn btn-warning">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a href="{{ path('drivers_new') }}" class="btn btn-primary">Create new</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
