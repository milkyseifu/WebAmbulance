{% extends 'dashboard/index.html.twig' %}
{% block body %}
    <div class="content-wrapper">
        <h3 class="font-weight-bold">Admin Dashboard</h3>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="row">
                    {% for user in users %}
                    <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                        <h3 class="font-weight-bold">welcome {{ user.email }}</h3>
{#                        <h6 class="font-weight-normal mb-0">All systems are running smoothly! You have <span class="text-primary">3 unread alerts!</span></h6>#}
                    </div>
                    <div class="col-12 col-xl-4">
                        <div class="justify-content-end d-flex">
                            <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                                <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <i class="mdi mdi-calendar"></i> Today {{ starts }}
                                </button>
{#                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2">#}
{#                                    <a class="dropdown-item" href="#">January - March</a>#}
{#                                    <a class="dropdown-item" href="#">March - June</a>#}
{#                                    <a class="dropdown-item" href="#">June - August</a>#}
{#                                    <a class="dropdown-item" href="#">August - November</a>#}
{#                                </div>#}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card tale-bg">
                    <div class="card-people mt-auto">
                        <img src="images/dashboard/ambulance2.jpg" alt="people">
                        <div class="weather-info">
                            <div class="d-flex">
                                <div>
{#                                    <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>31<sup>C</sup></h2>#}
                                </div>
                                <div class="ml-2">
                                    <h1 class="location font-weight-bold btn-primary">Jimma, Ethiopia</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin transparent">
                <div class="row">
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card card-tale">
                            <a href="{{ path('ambulance_index') }}">
                            <div class="card-body">
                                <button class="btn btn-danger btn-rounded btn-icon ml-5">
                                    <i class="ti-car"></i>
                                </button>
                                <div class="ml-4">
                                    <p class="mb-2 mt-2">Ambulance Available</p>
                                    <p class="fs-30 mb-2 ml-4">{{ ambulances }}</p>
                                </div>
{#                                <p>10.00% (30 days)</p>#}
                            </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card card-dark-blue">
                            <a href="{{ path('hospital_index') }}">
                                <div class="card-body">
                                    <button class="btn btn-success btn-rounded btn-icon ml-5">
                                        <i class="ti-home"></i>
                                    </button>
                                    <div class="ml-4">
                                        <p class="mb-2 mt-2">Hospital Available</p>
                                        <p class="fs-30 mb-2 ml-4">{{ hospitals }}</p>
                                    </div>
                                    {#                                <p>22.00% (30 days)</p>#}
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                        <div class="card card-light-blue">
                            <a href="{{ path('drivers_index') }}">
                                <div class="card-body">
                                    <button class="btn btn-dark btn-rounded btn-icon ml-5">
                                        <i class="ti-face-smile"></i>
                                    </button>
                                    <div class="ml-4">
                                        <p class="mb-2 mt-2">Ambulance Drivers Available</p>
                                        <p class="fs-30 mb-2 ml-4">{{ drivers }}</p>
                                    </div>
                                    {#                                <p>2.00% (30 days)</p>#}
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 stretch-card transparent">
                        <div class="card card-light-danger">
                            <a href="#">
                                <div class="card-body">
                                    <button class="btn btn-primary btn-rounded btn-icon ml-5">
                                        <i class="ti-info"></i>
                                    </button>
                                    <div class="ml-4">
                                        <p class="mb-2 mt-2">Number of Incident Informations Received</p>
                                        <p class="fs-30 mb-2 ml-4">{{ incidents }}</p>
                                    </div>
                                    {#                                <p>0.22% (30 days)</p>#}
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}